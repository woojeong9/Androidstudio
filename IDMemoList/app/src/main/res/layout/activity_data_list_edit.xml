<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataListEdit"
    >


    <ImageView
        android:id="@+id/Modifyrect"
        android:layout_width="370dp"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002"
        app:srcCompat="@drawable/depth4_modifyrect" />

    <Button
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#322878"
        android:text="완   료"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/Modifyrect"
        app:layout_constraintEnd_toEndOf="@+id/Modifyrect"
        app:layout_constraintStart_toStartOf="@+id/Modifyrect"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/Back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="@+id/Modifyrect"
        app:layout_constraintTop_toTopOf="@+id/Modifyrect"
        app:srcCompat="@drawable/depth4_back" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="75dp"
        android:layout_height="75dp"

        app:layout_constraintBottom_toBottomOf="@+id/imagearea"
        app:layout_constraintEnd_toEndOf="@+id/imagearea"
        app:layout_constraintStart_toStartOf="@+id/imagearea"
        app:layout_constraintTop_toTopOf="@+id/imagearea"

        app:srcCompat="@drawable/circle_1" />

    <ImageView
        android:id="@+id/imagearea"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/Modifypen"
        app:layout_constraintEnd_toEndOf="@+id/Modifyrect"
        app:layout_constraintStart_toStartOf="@+id/Modifyrect"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/circledot"
        />

    <ImageView
        android:id="@+id/Modifypen"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagearea"
        app:layout_constraintEnd_toEndOf="@+id/Modifyrect"
        app:layout_constraintTop_toTopOf="@+id/imagearea"

        app:srcCompat="@drawable/depth4_modify" />


    <EditText
        android:id="@+id/IDedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <EditText
        android:id="@+id/PWedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="24dp"
        android:text="ID :"
        android:textColor="#322878
"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Modifyrect"
        app:layout_constraintTop_toBottomOf="@+id/Modifypen" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="PW :"
        android:textColor="#322878
"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Modifyrect"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.062" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="180dp"
        android:layout_height="33dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/Modifyrect"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/Modifyrect"
        app:layout_constraintTop_toTopOf="@+id/Modifyrect"
        app:srcCompat="@drawable/colorliner" />

    <EditText
        android:id="@+id/title_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />


</androidx.constraintlayout.widget.ConstraintLayout>